{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "sourceMap": false,
    "removeComments": false,
    "isolatedModules": false,
    "declaration": false,
    "noEmitOnError": true,
    "noResolve": false,
    "pretty": true,
    "rootDir": "../",
    "outDir": "../../lib/"
  },
  "filesGlob": [
    "**/*.ts"
  ],
  "copyFilesGlob": [
    "**/*.json",
    "!**/tsconfig.json"
  ]
}